<h2 class="text-2xl font-bold mb-6 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Remember Me Checkbox -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mb-6">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div class="flex justify-center">
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  </div>
<% end %>

<!-- Forgot Password and Sign Up Links -->
<div class="mt-6 text-center">
  <%= link_to "Forgot your password?", new_user_password_path, class: "text-blue-600 hover:text-blue-800" %> |
  <%= link_to "Sign up", new_user_registration_path, class: "text-blue-600 hover:text-blue-800" %>
</div>
