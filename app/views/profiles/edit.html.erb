<!-- app/views/profiles/edit.html.erb -->
<h2 class="text-2xl font-bold mb-6 text-center">Edit Profile</h2>

<%= form_for(@user, url: profile_path, html: { multipart: true }, method: :patch) do |f| %>
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
    
    <!-- Error Messages -->
    <%= render "devise/shared/error_messages", resource: @user %>

    <!-- Username Field -->
    <div class="mb-4">
      <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :username, class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Profile Image Field -->
    <div class="mb-4">
      <%= f.label :profile_image, "Profile Image", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :profile_image, class: "w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-center">
      <%= f.submit "Update Profile", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  </div>
<% end %>

<%= link_to 'Back to Profile', profile_path, class: "text-blue-500 hover:underline mt-4 block text-center" %>
