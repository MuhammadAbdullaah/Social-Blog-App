<!-- app/views/profiles/show.html.erb -->
<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg mt-6">
  <h2 class="text-2xl font-bold mb-4 text-center">Your Profile</h2>

  <!-- Profile Image -->
  <div class="mb-6 flex justify-center">
    <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image, class: "rounded-full w-32 h-32" %>
    <% else %>
      <!-- Default placeholder image if no profile image is attached -->
      <%= image_tag "avater.png", class: "rounded-full w-32 h-32" %>
    <% end %>
  </div>

  <!-- Name and Email -->
  <div class="text-center">
    <p class="text-lg font-semibold text-gray-800 mb-2"><strong>Name:</strong> <%= @user.username %></p>
    <p class="text-lg text-gray-700 mb-4"><strong>Email:</strong> <%= @user.email %></p>
  </div>

  <!-- Edit Profile Link -->
  <div class="text-center">
    <%= link_to 'Edit Profile', edit_profile_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
