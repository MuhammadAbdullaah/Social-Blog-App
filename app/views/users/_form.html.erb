<%# app/views/users/_form.html.erb %>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :email, class: 'block font-semibold mb-2' %>
    <%= form.text_field :email, class: 'w-full px-4 py-2 border rounded-md' %>
  </div>

  <div class="mb-4">
    <%= form.label :admin, class: 'block font-semibold mb-2' %>
    <%= form.check_box :admin, class: 'mr-2' %>
    <%= form.label :admin, 'Make this user an admin', class: 'inline' %>
  </div>

  <div class="mb-4">
    <%= form.submit 'Save', class: 'bg-blue-600 text-white py-2 px-4 rounded-md' %>
  </div>
<% end %>
