<%# app/views/users/new.html.erb %>

<h1 class="text-2xl font-bold mb-4">Add New User</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: 'block text-gray-700 font-semibold' %>
    <%= form.text_field :email, class: 'w-full border rounded px-4 py-2 mt-2' %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: 'block text-gray-700 font-semibold' %>
    <%= form.password_field :password, class: 'w-full border rounded px-4 py-2 mt-2' %>
  </div>

  <div class="mb-4">
    <%= form.label :admin, 'Mark as Admin', class: 'inline-flex items-center text-gray-700 font-semibold' %>
    <%= form.check_box :admin, class: 'ml-2' %>
  </div>

  <div>
    <%= form.submit 'Create User', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
  </div>
<% end %>
