<%# app/views/users/edit.html.erb %>

<h1 class="text-2xl font-bold mb-4">Edit User</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :email, class: 'block font-semibold mb-2' %>
    <%= form.text_field :email, class: 'w-full px-4 py-2 border rounded-md' %>
  </div>

  <div class="mb-4">
    <%= form.label :admin, class: 'block font-semibold mb-2' %>
    <%= form.check_box :admin, class: 'mr-2' %>
    <%= form.label :admin, 'Make this user an admin', class: 'inline' %>
  </div>

  <div class="mb-4">
    <%= form.submit 'Update User', class: 'bg-blue-600 text-white py-2 px-4 rounded-md' %>
  </div>
<% end %>

<%= link_to 'Back to Users List', users_path, class: 'text-blue-600 hover:text-blue-800' %>
