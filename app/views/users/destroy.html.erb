<%# app/views/users/destroy.html.erb %>

<h1 class="text-2xl font-bold mb-4">Are you sure you want to delete this user?</h1>

<%= form_with(model: @user, method: :delete, local: true) do |form| %>
  <div class="mb-4">
    <%= form.submit 'Yes, Delete User', class: 'bg-red-600 text-white py-2 px-4 rounded-md' %>
  </div>
<% end %>

<%= link_to 'Cancel', users_path, class: 'text-blue-600 hover:text-blue-800' %>
